      }

      .btn-primary:hover {
        background: #d94950;
        border-color: #d94950;
      }

      .btn-secondary {
        background: #ffffff !important;
        color: #354050 !important;
        border-color: #d0d5dc !important;
        cursor: pointer;
      }

      .btn-secondary:hover {
        color: #354050 !important;
        background: #f9fafb !important;
