      }

      .fs-22 {
        font-size: 22px !important;
      }

      .bg-snow {
        background: #f9fafb !important;
      }

      .card {
        border-color: #d0d5dc !important;
      }

      .text-pebble {
        color: #79879a !important;
      }

      .text-charcoal {
        color: #354050 !important;
      }

      .bottom-drawer {
        position: fixed;
        bottom: 56px;
        width: 100%;
        border-top: 1px solid #d0d5dc;
      }

